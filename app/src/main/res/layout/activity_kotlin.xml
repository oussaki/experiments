<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="expiriments.experiments.KotlinActivity">

    <Button
        android:id="@+id/btn_coroutines"
        android:layout_width="118dp"
        android:layout_height="49dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Coroutines"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_threads"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Threads"
        app:layout_constraintLeft_toLeftOf="@+id/btn_coroutines"
        app:layout_constraintRight_toRightOf="@+id/btn_coroutines"
        app:layout_constraintTop_toBottomOf="@+id/btn_coroutines" />

    <Button
        android:id="@+id/btn_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Call all "
        app:layout_constraintLeft_toLeftOf="@+id/btn_threads"
        app:layout_constraintRight_toRightOf="@+id/btn_threads"
        app:layout_constraintTop_toBottomOf="@+id/btn_threads" />

    <TextView
        android:id="@+id/txt_logx"
        android:layout_width="301dp"
        android:layout_height="259dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteX="72dp" />

    <TextView
        android:id="@+id/txt_log"
        android:layout_width="301dp"
        android:layout_height="259dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_all"
        tools:layout_editor_absoluteX="72dp" />
</android.support.constraint.ConstraintLayout>
